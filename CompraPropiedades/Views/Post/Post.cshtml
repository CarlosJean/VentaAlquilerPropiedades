@model CompraPropiedades.ViewModels.PostViewModel
@{
    ViewBag.Title = "Publicar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/bundles/Post.css")
<section id="scPost">
    <div id="dvPost">
        @using (Html.BeginForm("Create", "POST", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            
            <div class="form-group">
                    @Html.TextBoxFor(m => m.Publication.Title, new { @class = "form-control", @placeholder = "Título" })
            </div>
            
            <div class="form-group">
                @Html.TextAreaFor(m => m.Publication.Description, new { @class = "form-control", @placeholder = "Descripción" })
            </div>

            <div class="form-group row">
                <div class="col-sm-4">@Html.EditorFor(m => m.Publication.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Precio", @type = "number" } })@*<input type="number" class="form-control" id="txtPrice" placeholder="Precio"/>*@</div>
                <div class="col-sm-4"><select id="slcProvinces" class="form-control" required><option value="0">Provincia</option></select></div>
                <div class="col-sm-4"><select id="slcSectors" class="form-control" name="Publication.IdSector" required><option>Sector</option></select></div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <select name="Publication.IdPropertyType" id="slcPropertyTypes" class="form-control"><option>Tipo de propiedad</option></select>
                </div>
                <div class="col-sm-6">
                    <select name="Publication.IdPublicationType" id="slcPublicationTypes" class="form-control"><option>Tipo de publicación</option></select>
                </div>
            </div>

            <p><strong>Comodidades:</strong></p>
            <hr />
            <div id="dvAccomodations" class="row"></div>
            <div class="row">
                <div class="col-sm-12">
                    <p><strong>Imágenes:</strong></p>
                    <hr />
                </div>
                <div class="col-sm-12">
                    @Html.TextBoxFor(m => m.PublicationImage, new {@type="file", @multiple="true",@accept=".jpeg,.jpg, .png",@class="form-control" })
                </div>              
            </div>
            <div class="row">
                <div class="col-sm-12" id="dvBtnSend">
                    <input type="submit" value="Enviar" class="btn btn-success"/>
                </div>                
            </div>
            
        }

    </div>
</section>
@Scripts.Render("~/bundles/Post.js")


