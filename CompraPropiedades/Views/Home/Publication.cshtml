@model  CompraPropiedades.Models.Publication
@{
    ViewBag.Title = "Publication";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var elemento = 1;
}
<!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
        Ver datos del anunciante
    </button>

<section id="secPublicationDetails">
    <div class="row">
        <h2 class="col-sm-10">@Model.Title</h2>
        <h3 class="col-sm-2" id="hPrice"><strong>@Model.Price</strong></h3>
    </div>
    <hr />
    <div class="row" id="secPublicationBody">
        <div id="dvPublicationImages" class="row">

            <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (var indice = 0; indice < Model.PublicationImage.Count(); indice++)
                    {
                        if (indice == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to=@indice class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to=@indice></li>
                        }

                    }
                </ol>
                <div class="carousel-inner">


                    @foreach (var publicationImages in Model.PublicationImage)
                    {
                        if (elemento == 1)
                        {
                            <div class="carousel-item active">
                                <img src=@publicationImages.Image @*class="d-block w-100"*@ alt="...">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src=@publicationImages.Image @*class="d-block w-100"*@ alt="...">
                            </div>
                        }
                        elemento++;
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
        <p>@Model.Description</p>
        <div id="dvAcommodations">
            <ul>
                @foreach (var acommodations in Model.PublicationAcommodations)
                {
                    <li>@acommodations.Quantity @acommodations.Acommodations.Description</li>
                }
            </ul>
        </div>
    </div>


</section>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Información del anunciante</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @*<p>*@
                    <label><strong>Nombre del anunciante</strong></label>
                    <p>@Model.User.Name @Model.User.LastName</p>
                @*</p>*@
                @*<p>*@
                    <label><strong>Número telefónico</strong></label>
                    <p>@Model.User.Phone</p>
                @*</p>
                <p>*@
                    <label><strong>Dirección</strong></label>
                    <p>@Model.User.Address</p>
                @*</p>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


@Styles.Render("~/bundles/Publication.css")
@Scripts.Render("~/bundles/Publication.js")






