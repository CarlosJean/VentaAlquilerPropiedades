@model CompraPropiedades.ViewModels.PublicationViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@Styles.Render("~/bundles/Detail.css");
<section>
    <div class="row">
        <h2 class="col-sm-6" id="pTitle">@Model.Title</h2><span class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6" id="spnPrice">@Model.Price</span>
    </div>

    <hr />
    <div class="row">
        @foreach (var image in Model.Images)
        {
            <img src=@image class="col-sm-6" />
        }
    </div>
    <div>
        <p id="pDescription">@Model.Description</p>
    </div>

</section>





